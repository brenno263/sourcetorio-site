---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="An informational site about the Source Allies Factorio Server" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- This tells dark reader that it shoudn't activate -->
		<meta name="darkreader-lock">

		<!-- favicon shenanigans -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 200, 176, 226;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 40%,
			rgba(255, 255, 255, 0.4) 80%
		);
		--accent-infinite-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)) 0%,
			rgb(var(--accent-light)) 25%,
			rgb(var(--accent)) 50%,
			rgb(var(--accent-light)) 75%,
			rgb(var(--accent)) 100%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}
	
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	ul, ol {
		list-style-type: none;
	}
	
	/* text classes */
    .text-gradient {
        background-image: var(--accent-gradient);
        background-clip: text;
        color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

	.text-gradient-animated {
		background-image: var(--accent-infinite-gradient);
		background-clip: text;
		color: transparent;
		background-size: 200%;
		animation: gradient-anim 6s linear infinite;
		
	}
	@keyframes gradient-anim {
		0%{background-position-x: -100%}
		100%{background-position-x: 100%}
	}
</style>
