---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="inset">
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		position: relative;
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		background-color: #313031;
		border-image: url("data:image/png;base64,") 8/4px repeat;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		/* background-color: #23262d; */
		opacity: 0.8;
		z-index: 4;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.inset {
		border-image: url("data:image/png;base64,") 16/8px repeat;
		border-image-outset: 4px;
		background-color: #414040;
		box-shadow: none;
		padding: 8px;
	}
	.link-card:after {
		content: '';
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		background-position: 0;
		background-image: var(--accent-gradient);
		z-index: 2;
		opacity: 0;
		transition: opacity 0.5s ease;
	}

	.link-card:is(:hover, :focus-within):after {
		opacity: 0.5
	}

	.link-card:is(:hover, :focus-within) a {
		color: rgb(var(--accent-light));
	}
</style>
