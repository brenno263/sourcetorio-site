---
import Layout from '../layouts/Layout.astro';
import CardSection from '../components/solid/CardSection';
import Heading from '../components/Heading.astro';
import Countdown from '../components/solid/Countdown';
import Content from './indexmd.mdx';
---

<Layout title="Welcome to Sourcetorio">
	<main>
		<Heading />
		<Content></Content>
	</main>
</Layout>

<style is:global>
	main {
		margin: auto;
		width: 800px;
		max-width: calc(100% - 10vw);
		color: white;
		font-size: 1.2rem;
		line-height: 1.6;
	}
	@media (max-width: 600px) {
		main {
			max-width: 100%;
		}
	}
	p:not(:last-child) {
		margin-bottom: 1rem;
	}
	.header-logo {
		max-width: 12rem;
		height: 100%;
		display: inline;
	}
	a {
		text-decoration: underline;
		background-image: var(--accent-gradient);
		background-clip: text;
		color: rgb(var(--accent-light));
		background-size: 400%;
		background-position: 0%;
		transition: color 0.5s ease;
	}
	a:hover {
		color: transparent;
	}
	h3 {
		margin: 1rem 0 0.2rem;
		color: rgb(var(--accent-light));
	}
	.card-section {
		position: relative;
		padding: 1rem;
        margin: 1rem 0;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		background-color: #313031;
		border-image: url("data:image/png;base64,") 8/4px repeat;
	}
	.card-section-inlay {
		border-image: url("data:image/png;base64,") 16/8px repeat;
		border-image-outset: 4px;
		background-color: #414040;
		box-shadow: none;
		margin-top: 1rem;
		padding: 1.2rem;
	}
	button {
		background-color: #5eb663;
		padding: 8px 14px;
		font-size: 100%;
		text-align: left;
		color: #000;
		font-weight: 600;
		display: inline-block;
		border: none;
		line-height: inherit;
		white-space: nowrap;
		box-shadow: inset 8px 0px 4px -8px #000,inset -8px 0px 4px -8px #000,inset 0px 10px 2px -8px #95df99,inset 0px 10px 2px -8px #163218,inset 0px -9px 2px -8px #000,0px 0px 4px 0px #000;
		position: relative;
		cursor: pointer;
		user-select: none;
	}
	button:hover {
		color: #000;
		text-decoration: none;
		outline: 0;
		box-shadow: inset 8px 0px 4px -8px #000,inset -8px 0px 4px -8px #000,inset 0px 9px 2px -8px #cdf1cf,inset 0px 8px 4px -8px #000,inset 0px -8px 4px -8px #000,inset 0px -9px 2px -8px #432400,0px 0px 4px 0px #000,inset 0px 0px 4px 2px #34be3c;
		background-color: #92e897;
		filter: drop-shadow(0 0 2px #34be3c);
	}
</style>
